{% extends 'base.html.twig' %}

{% block title %}Config index{% endblock %}

{% block body %}
    <h1>Config index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SiteName</th>
                <th>Filter</th>
                <th>Background</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for config in configs %}
            <tr>
                <td>{{ config.id }}</td>
                <td>{{ config.siteName }}</td>
                <td>{{ config.filter }}</td>
                <td>{{ config.background }}</td>
                <td>{{ config.image }}</td>
                <td>
                    <a href="{{ path('app_config_show', {'id': config.id}) }}">show</a>
                    <a href="{{ path('app_config_edit', {'id': config.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_config_new') }}">Create new</a>
{% endblock %}
